<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title id="pageTitle">Login</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f0f8ff;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .login-container {
            background-color: #fff;
            padding: 20px 30px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            width: 300px;
            text-align: center;
        }

        h2 {
            margin-bottom: 20px;
            color: #333;
        }

        label {
            display: block;
            margin-bottom: 8px;
            font-weight: bold;
            color: #555;
        }

        input[type="text"] {
            width: 100%;
            padding: 10px;
            margin-bottom: 20px;
            border: 1px solid #ccc;
            border-radius: 4px;
            font-size: 16px;
        }

        button {
            background-color: rgb(191, 170, 191);
            color: white;
            border: 1px solid purple;
            padding: 10px 15px;
            font-size: 16px;
            border-radius: 4px;
            cursor: pointer;
            position: relative;
            overflow: hidden;
            display: flex;
            align-items: center;
            justify-content: center;
            width: 100%;
            margin-left: 8px;
        }

        button:hover {
            background-color: rgb(208, 135, 208);
        }

        .spinner {
            border: 4px solid #f3f3f3;
            border-top: 4px solid purple;
            border-radius: 50%;
            width: 20px;
            height: 20px;
            animation: spin 0.6s linear infinite;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        .button-loading {
            color: transparent;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <h2>Login</h2>
        <form action="/login" method="POST" id="login-form">
            <label for="username">Enter your Username:</label>
            <input type="text" id="username" name="username" required>
            <button type="submit" id="login-btn">
                <span id="button-text">Login</span>
                <div id="spinner" class="spinner" style="display: none;"></div>
            </button>
        </form>
    </div>

    <script>
        const form = document.getElementById('login-form');
        const button = document.getElementById('login-btn');
        const usernameInput = document.getElementById('username');
        const buttonText = document.getElementById('button-text');
        const spinner = document.getElementById('spinner');
        const pageTitle = document.getElementById('pageTitle');

        form.addEventListener('submit', function(event) {
            event.preventDefault();

            const username = usernameInput.value.trim();

            if (username) {
                // Change title to "Logging in..."
                pageTitle.textContent = 'Logging in...';
                buttonText.style.display = 'none';
                spinner.style.display = 'block';

                setTimeout(() => {
                    // Change title to "Fetching Attendance..."
                    pageTitle.textContent = 'Fetching Attendance...';
                    form.submit();  // Proceed to submit the form after 2 seconds
                }, 2000);  // 2-second delay
            } else {
                alert('Please enter a username');
            }
        });
    </script>
</body>
</html>
